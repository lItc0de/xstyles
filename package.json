    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-airbnb": "^3.0.1",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "highlight-loader": "^0.7.3",
    "highlight.js": "^9.12.0",
    "html-loader": "^0.5.5",
