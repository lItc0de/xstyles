{
  "compilerOptions": {
    "lib": ["dom", "es5", "es2015"],
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}
